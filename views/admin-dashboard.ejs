        <form method="POST" action="/admin/delete/<%= mag.id %>" style="flex:1" onsubmit="return confirm('È˜tergi aceastÄƒ revistÄƒ?')">
          <button type="submit" class="btn-sm btn-del" style="width:100%">ğŸ—‘ È˜terge</button>
