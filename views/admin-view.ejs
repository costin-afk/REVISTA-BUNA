    </div>
  </div>

  <div class="actions">
    <a href="/admin/edit/<%= mag.id %>" class="btn btn-dark" style="flex:1;justify-content:center">âœï¸ EditeazÄƒ Revista</a>
    <form method="POST" action="/admin/delete/<%= mag.id %>" onsubmit="return confirm('EÈ™ti sigur cÄƒ vrei sÄƒ È™tergi aceastÄƒ revistÄƒ?')">
      <button type="submit" class="btn" style="background:#2a1a1a;color:#ef5350;border:1px solid #3a2020">ğŸ—‘ È˜terge</button>
    </form>
  </div>
</main>

<script>
function downloadQR() {
  const img = document.getElementById('qrImg');
  const a = document.createElement('a');
  a.href = img.src;
  a.download = 'qr-<%= mag.homeTeam.replace(/\s/g,"_") %>-vs-<%= mag.awayTeam.replace(/\s/g,"_") %>.png';
  a.click();
}
function copyUrl() {
  navigator.clipboard.writeText('<%= mag.matchUrl %>').then(() => {
    alert('Link copiat! âœ…');
  });
}
</script>
</body>
</html>
